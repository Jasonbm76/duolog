# Example Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database URL (for migrations and direct access)
DATABASE_URL=your_database_connection_string

# AI Service API Keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# App Configuration
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your_secure_random_string
NEXT_PUBLIC_MAX_FREE_CONVERSATIONS=5

# Email Configuration (production)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Optional: Analytics and Monitoring
GOOGLE_ANALYTICS_ID=your_ga_id
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=your_domain

# Admin Authentication
ADMIN_USERNAME=admin_username
ADMIN_PASSWORD_HASH=bcrypt_hash_of_password

# MCP Tools (for Claude Desktop)
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_pat
CAREMAP_PROD_DATABASE_URL=postgresql://user:pass@host:port/db

# Email Service (Resend)
RESEND_API_KEY=your_resend_api_key